@page
@model EmployeeManagement.Pages.HR.DashboardModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>HR Dashboard</h2>
            
            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5>Total Employees</h5>
                            <h3>@Model.TotalEmployees</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h5>Active Employees</h5>
                            <h3>@Model.ActiveEmployees</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h5>Today's Punches</h5>
                            <h3>@Model.TodaysPunches</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mb-3">
                <div class="col-12">
                    <a href="/HR/CreateEmployee" class="btn btn-primary me-2">Create Employee</a>
                    <a href="/HR/ManageLeaves" class="btn btn-info me-2">Manage Leaves</a>
                    <a href="/HR/DeactivatedEmployees" class="btn btn-warning me-2">View Deactivated</a>
                    <a href="/Employee/Dashboard" class="btn btn-secondary me-2">Employee View</a>
                </div>
            </div>

            <!-- Employee List -->
            <div class="card">
                <div class="card-header">
                    <h5>Employee List - Manage Employees</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Employee ID</th>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Designation</th>
                                    <th>Department</th>
                                    <th>Contact</th>
                                    <th>Joining Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.Employees)
                                {
                                    <tr>
                                        <td>@employee.EmployeeId</td>
                                        <td>@employee.FirstName @employee.LastName</td>
                                        <td>@employee.Username</td>
                                        <td>@employee.Designation</td>
                                        <td>@employee.Department</td>
                                        <td>@employee.ContactNumber</td>
                                        <td>@employee.DateOfJoining.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a href="/HR/EditEmployee/@employee.EmployeeId" class="btn btn-sm btn-primary me-1">Edit</a>
                                            <form method="post" asp-page-handler="DeactivateEmployee" asp-route-id="@employee.EmployeeId" class="d-inline" onsubmit="return confirm('Deactivate employee @employee.FirstName @employee.LastName?')">
                                                <button type="submit" class="btn btn-sm btn-warning">Deactivate</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>